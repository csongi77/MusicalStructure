<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    style="@style/list_item_container">

    <!-- Linear Layout for Title and Track Title -->
    <LinearLayout style="@style/list_item_artist_container">

        <!-- Author TextWiew -->
        <TextView
            android:id="@+id/text_author"
            style="@style/list_item_txt_artist"
            tools:text="@string/text_author" />

        <!-- Track Title TextView -->
        <TextView
            android:id="@+id/text_title"
            style="@style/list_item_txt_title"
            tools:text="@string/text_title" />
    </LinearLayout>

    <!-- Linear Layout for Genre and Length -->
    <LinearLayout style="@style/list_item_length_container">

        <!-- Genre TextView -->
        <TextView
            android:id="@+id/text_genre"
            style="@style/list_item_txt_genre"
            tools:text="@string/text_genre" />

        <!-- Track Length TextView -->
        <TextView
            android:id="@+id/text_length"
            style="@style/list_item_txt_length"
            tools:text="@string/text_length" />
    </LinearLayout>

    <!-- Play ImageView, image from material.io -->
    <ImageView
        android:id="@+id/list_item_ic_play"
        style="@style/list_item_ic_play"
        android:src="@drawable/ic_play_circle_outline_white_36dp" />
</LinearLayout>